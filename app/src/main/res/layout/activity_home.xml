<?xml version="1.0" encoding="utf-8"?>

<!-- Scrollview takes the xmlns to be the leading page-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">


    <FrameLayout
        android:id="@+id/fl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_menu"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="-20dp">

    </FrameLayout>


    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintStart_toStartOf="parent"
        app:mbn_countTextColor="@color/orange"
        app:mbn_defaultIconColor="@color/gray"
        app:mbn_rippleColor="@color/orange"
        app:mbn_selectedIconColor="@color/orange"
        app:mbn_shadowColor="@color/gray" />


</RelativeLayout>


